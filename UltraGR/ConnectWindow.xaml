<Window x:Class="UltraGR.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UltraGR"
        mc:Ignorable="d"
        Title="Verbindung" Height="300" Width="300">
    <Grid>
        <Button Click="buttonCancel_Click" HorizontalAlignment="Right"  Width="100" Height="50" VerticalAlignment="Bottom" Content="Abbrechen" Margin="0,0,5,5" FontSize="18"/>
        <Button Click="buttonConnect_Click" HorizontalAlignment="Right" Width="100" Height="50" VerticalAlignment="Bottom" Content="Verbinden" Margin="0,0,115,5" FontSize="18"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="5,120,0,0" VerticalAlignment="Top" Width="270"/>
        <Label x:Name="label" Content="Port auswählen." HorizontalAlignment="Left" Margin="5,80,0,0" VerticalAlignment="Top" Width="270"/>
    </Grid>
</Window>
