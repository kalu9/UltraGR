<Window x:Class="UltraGR.CalibrationWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UltraGR"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="Kalibrierung">

    <Grid>
        <Label x:Name="label" Content="Kalibrierung" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="48" Height="80" Width="300"/>
        <Button Click="button_exit" HorizontalAlignment="Right"  Width="134" Height="50" VerticalAlignment="Bottom" Content="Exit" Margin="0,0,5,5" FontSize="18"/>
        <Button Click="button_test" HorizontalAlignment="Center"  Width="134" Height="50" VerticalAlignment="Bottom" Content="Test" Margin="0,0,0,5" FontSize="18"/>
        


    </Grid>
</Window>
