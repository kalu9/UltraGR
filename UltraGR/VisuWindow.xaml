<Window x:Class="UltraGR.VisuWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UltraGR"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="Visualisierung" Closed="Window_Closed" SizeChanged="Window_SizeChanged" Loaded="Window_Loaded">

    <Grid>
        <Label x:Name="label" Content="Visualisierung" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="48" Height="80" Width="300" Grid.Column="1"/>
        <Button Click="button_exit" HorizontalAlignment="Right"  Width="134" Height="50" VerticalAlignment="Bottom" Content="Exit" Margin="0,0,5,5" FontSize="18" Grid.Column="1"/>
        <Ellipse Name="ellipse" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="50" Margin="253.5,195,0,0" Stroke="Black" VerticalAlignment="Top" Width="50" Grid.Column="1"/>
        <Label x:Name="labelData" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="5, 0, 0, 5" FontSize="18" Height="40" Width="700" Grid.ColumnSpan="2"></Label>

    </Grid>
</Window>
